<h1><%= @user.name %>'s profile <%= link_to 'Edit', edit_user_registration_path, :class => 'btn btn-danger'  %></h1>

<br>

<h3>My photos: <%= link_to 'Create new photo', new_photo_path, :class => 'btn btn-danger' %></h3>

<table class=".table">
  <tr>
    <th>Photo</th>
    <th>Name</th>
    <th>Actions</th>
  </tr>
  <% @user.photos.each do |photo| %>
          <tr>
            <td><%= link_to image_tag(photo.image.url(:medium), size: '150'), photo_path(photo)  %></td>
            <td><%= photo.name %></td>
            <% if user_signed_in?   && current_user.id == @user.id %>
            <td>
              <%= link_to 'Delete', photo_path(photo), method: :delete, data: {confirm: 'Are you sure?'} %>
            </td>
            <% end %>
          </tr>
  <% end %>
</table>
    <hr/>